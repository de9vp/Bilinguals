@section scripts {
    <script type="text/javascript">
        var elementSentence =
            `
            <div class="row justify-content-center px-3 pb-3 pt-0 rounded-pill1 bg-light mb-4" style="border: 1px solid #d1d7dc; margin: 0;">
                <div class="d-flex justify-content-between">
