@model Bilinguals.Domain.Models.Group

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Delete</h2>

<h3 class="text-center">Are you sure you want to delete this?</h3>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="">
                <div class="form-actions no-color text-center mt-4">
                    <input type="submit" value="Delete" class="btn btn-custom1 rounded-pill2 me-2" />
                    <span class="btn btn-secondary rounded-pill2">@Html.ActionLink("Cancel", "mysentence", "groups", htmlAttributes: new { @class = "", style = "color:inherit;text-decoration: none;" })</span>
                </div>
            </div>
        </div>
    }
