@model Bilinguals.Domain.Models.Dialog

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-danger">Delete</h2>

<h3 class="text-center">Are you sure you want to delete this dialog?</h3>
<div>
    <hr />
    <h5 class="text-center">
        @Html.DisplayFor(model => model.Name)
    </h5>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center mt-4">
            <input type="submit" value="Delete" class="btn btn-danger rounded-pill2 me-2" />
            <span class="btn btn-secondary rounded-pill2">@Html.ActionLink("Cancel", "Index", "", htmlAttributes: new { @class = "", style = "color:inherit;text-decoration: none;" })</span> 
        </div>
    }
</div>
