@model Bilinguals.Domain.Models.Dialog

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Edit Dialog Name</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.DateCreated)

        
            <div class="d-flex justify-content-center">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control rounded-pill1", style = "max-width: 700px !important;" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        

    </div>
    <div class="form-actions no-color text-center mt-4">
        <input type="submit" value="Save" class="btn btn-custom1 rounded-pill2 me-2" />
        <span class="btn btn-secondary rounded-pill2">@Html.ActionLink("Cancel", "Index", "", htmlAttributes: new { @class = "", style = "color:inherit;text-decoration: none;" })</span>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
