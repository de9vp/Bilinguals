@model Bilinguals.Domain.Models.Sentence

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var returnUrl = Request.QueryString["returnUrl"];
}

<h2 class="text-center">Edit Sentence</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.DateCreated)
    @Html.HiddenFor(model => model.SortOrder)
    @Html.HiddenFor(model => model.DialogId)

    <div class="form-group text-center">
        English Text
        <div class="d-flex justify-content-center">
            @Html.EditorFor(model => model.EnText, new { htmlAttributes = new { @class = "form-control rounded-pill1", style = "max-width: 600px;" } })
            @Html.ValidationMessageFor(model => model.EnText, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group text-center mt-4">
        Vietnamese Text
        <div class="d-flex justify-content-center">
            @Html.EditorFor(model => model.ViText, new { htmlAttributes = new { @class = "form-control rounded-pill1", style = "max-width: 600px;" } })
            @Html.ValidationMessageFor(model => model.ViText, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="">
            <div class="form-actions no-color text-center mt-4">
                <input type="submit" value="Save" class="btn btn-custom1 rounded-pill2 me-2" />
                <span class="btn btn-secondary rounded-pill2">@Html.ActionLink("Cancel", "Index", "", htmlAttributes: new { @class = "", style = "color:inherit;text-decoration: none;" })</span>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
