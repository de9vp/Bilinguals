@model Bilinguals.Domain.Models.Sentence

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center text-danger">Are you sure you want to delete this sentence?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="text-center">
            Dialog Name
        </dt>

        <dd class="text-center">
            @Html.DisplayFor(model => model.Dialog.Name)
        </dd>

        <dt class="text-center mt-4">
            English Text
        </dt>

        <dd class="text-center">
            @Html.DisplayFor(model => model.EnText)
        </dd>

        <dt class="text-center mt-4">
            Vietnameme Text
        </dt>

        <dd class="text-center">
            @Html.DisplayFor(model => model.ViText)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center mt-4">
            <input type="submit" value="Delete" class="btn btn-danger rounded-pill2 me-2" />
            <span class="btn btn-secondary rounded-pill2">@Html.ActionLink("Cancel", "Index", "", htmlAttributes: new { @class = "", style = "color:inherit;text-decoration: none;" })</span> 
        </div>
    }
</div>
