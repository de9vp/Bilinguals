
@{
    ViewBag.Title = "Create";
}

<div class="modal-body">
   @using (Html.BeginForm("Create", "Images", FormMethod.Post, new { enctype = "multipart/form-data", id = "img-form" }))
    {
        @Html.AntiForgeryToken()
        <label>Select file (*.png)</label>
        <input class="form-control" type="file" name="ImageFile" value="" style="width: 300px" />
    }
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-cl btn-secondary" data-bs-dismiss="modal">Close</button>
    <input type="submit" form="img-form" value="Upload" class="btn btn-primary" />
</div>




